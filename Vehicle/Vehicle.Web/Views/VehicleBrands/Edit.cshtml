@model Vehicle.ViewModel.VehicleBrand.VehicleBrandEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Brand</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="VehicleBrandID" />
            <div class="form-group">
                <label asp-for="VehicleBrandName" class="control-label"></label>
                <input asp-for="VehicleBrandName" class="form-control" />
                <span asp-validation-for="VehicleBrandName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" type="hidden" />
                Is Active :
                <input type="checkbox" id="chkState" @((Model.State == 0) ? "" : "checked") />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
